<% import airports.models.Country %>
<%@ val countriesAirports: Seq[(Country, Int)] %>
<%@ val countriesRunways: Map[String, Seq[(String, String)]] %>

<div class="row">
<div class="col-md-6">
    <h3>Number of airports per country</h3>
    <p>Top 10</p>
    <ol>
        #for (t <- countriesAirports.take(10))
            <li><a href="/countries/${ t._1.code }">${ t._1.name } - ${ t._2 }</a></li>
        #end
    </ol>

    <p>Bottom 10</p>
    <ol>
        #for (t <- countriesAirports.reverse.take(10))
            <li><a href="/countries/${ t._1.code }">${ t._1.name } - ${ t._2 }</a></li>
        #end
    </ol>
</div>

<div class="col-md-6">
    <h3>Types of runways per country</h3>
    <table class="table">
    <tbody>
    #for ((country, surfaces) <- countriesRunways)
    <tr>
        <td>${ country }</td>
        <td>
            <ul>
            #for (surface <- surfaces)
                <li>${ surface._2 }</li>
            #end
            </ul>
        </td>
    </tr>
    #end
    </tbody>
    </table>
</div>
</div>